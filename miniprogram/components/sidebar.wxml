<!--components/sidebar.wxml-->
<view class="page">
    <view class="overlay {{side.newopen?'hidden':''}}" bindtap="clickGreyMask"></view> <!-- 添加灰色遮罩 -->
    <view class="content {{side.newopen?'':'state'}}">
        <view class="user-usage-container">
            <image src="https://www.yubanstar.top/pic?filename=user_usage_logo.png" mode="widthFix" class="logo" />
            <text class="user-usage-text">剩余使用次数: {{restUsageNum}}次</text>
        </view>
        <view class="sign-in-container">
            <image src="https://www.yubanstar.top/pic?filename=signin.png" class="logo" mode="widthFix"/>
            <text class="sign-in-text" bindtap="clickSignInText">签到领取次数</text>
        </view>
        <view class="activation-code-container">
            <image src="https://www.yubanstar.top/pic?filename=qrcode.png" class="logo" mode="widthFix"/>
            <text class="activation-code-exchange" bindtap="clickCodeExchange">激活码兑换</text>
        </view>
    </view>

    <view class="popup {{isExchangePopupVisible ? 'visible popup-animation' : 'hidden'}}" bindtap="hidePopup">
        <view class="popup-content" catchtap="stopPropagation">
            <input class="input" placeholder="请输入兑换码" bindinput="onInput" value="{{exchangeCodeInputValue}}" />
            <button class="confirm-btn" bindtap="onConfirm">确认</button>
        </view>
    </view>
</view>