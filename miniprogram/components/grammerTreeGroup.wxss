/* components/grammerTreeGroup.wxss */
.custom-view-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: calc(100% - 108px);
    display: flex;
    flex-direction: column;
    padding: 82px 0;
}

.mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

.translation-container {
    width: calc(100% - 44px);
    min-height: 8%;
    max-height: 20%;
    /* 设置自动换行 */
    word-wrap: break-word;
    /* 设置溢出时显示省略号 */
    overflow-wrap: break-word;
    text-overflow: ellipsis;
    /* 设置溢出时显示滚动条 */
    overflow-y: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(255, 255, 255);
    border-radius: 10px;
    z-index: 2;
    margin: 0 22px;
    /* 上下边距为 0，左右边距为 20px */
    margin-top: 8px;
}

.grammar-container {
    width: calc(100% - 44px);
    min-height: 15%;
    max-height: 30%;
    /* 设置自动换行 */
    word-wrap: break-word;
    /* 设置溢出时显示省略号 */
    overflow-wrap: break-word;
    text-overflow: ellipsis;
    /* 设置溢出时显示滚动条 */
    overflow-y: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(255, 255, 255);
    border-radius: 10px;
    border: 1px solid #ccc;
    z-index: 2;
    margin: 0 22px;
    /* 上下边距为 0，左右边距为 20px */
    margin-top: 12px;
}

.words-container {
    width: calc(100% - 49px);
    min-height: 20%;
    max-height: 40%;
    padding-left: 5px;
    padding-top: 5px;
    /* 设置自动换行 */
    word-wrap: break-word;
    /* 设置溢出时显示省略号 */
    overflow-wrap: break-word;
    text-overflow: ellipsis;
    /* 设置溢出时显示滚动条 */
    overflow-y: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(255, 255, 255);
    border-radius: 10px;
    z-index: 2;
    margin: 0 22px;
    /* 上下边距为 0，左右边距为 20px */
    margin-top: 12px;
}