/* components/input/input.wxss */
.container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 48px;
  }
  
  .left, .right {
    width: 48px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }
  
  .center {
    flex-grow: 1;
    height: 100%;
    border-radius: 90px;
  }

  .long-press {
      flex-grow: 1;
      height: 100%;
      margin-right: 10px;
  }

  .input {
      height: calc(100% - 8px);
      border-radius: 90px;
      margin-left: 8px;
      margin-right: 8px;
      margin-top: 4px;
      padding-left: 10px;
      border: 1px solid rgba(0, 0, 0, 0.5);
  }