/* components/textgroup.wxss */

.text-group {
    z-index: 1;
    opacity: 86%;
    border-radius: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    min-height: 120px;
    max-height: 350px;
    overflow-y: auto;
    overflow-x: scroll;
    transition: margin-top 0.3s ease-out;
    /* transform似乎会影响到点击事件的区域范围 */
    background-color: white;
}

.translate-view {
    min-height: 30px;
    max-height: 90px;
    border-radius: 20rpx;
    background-color: white;
    margin-top: 5px;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    transition: margin-top 0.3s ease-out;
    opacity: 70%;
    overflow-y: auto;
    overflow-x: scroll;
    align-items: center;
    display: flex;
    align-items: center;
    justify-content: center;
}

.translate-text {
    color: rgba(0, 0, 0, 0.5);
    font-size: 15px;
}

.text-item {
    font-size: 17px;
    font-weight: 200;
    color: rgba(0, 0, 0, 0.9);
}
.highlight {
    /* font-weight: 500; */
    color: #1485EE;
  }