<!--pages/chat/chat.wxml-->
<!-- 注意，这里建议按照小程序的规范给出4个不同的层级出来 -->
<view class="above-container">
    <text-group class="ai-content" id="ai-text-group"></text-group>
    <image class="ai-image" style="min-height: 560px;" mode="widthFix" src="{{url}}" bindtap="aiImageViewClickEvent"></image>
    <view class='menu-button' hover-class="menu-button-active" bindtap="clickMenuButton">
        <image src="https://www.yubanstar.top/pic?filename=setting.png" style="width: 32px; height: 32px;"/>
    </view>
</view>

<text class="user-text" wx:if="{{userNewSentence !== ''}}">{{userNewSentence}}</text>
<voice-input class="voice-input" bind:longPressed="onLongPressed" bind:confirm="onConfirm" bind:onTouchEnd="onTouchEnd"/>

<sidebar id="menu-bar"/>

