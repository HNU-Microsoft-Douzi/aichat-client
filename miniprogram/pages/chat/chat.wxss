/* pages/chat/chat.wxss */
page {
    height: 100%;
}

.above-container {
    height: 50%;
    position: relative;
    z-index: 0;
}

.bottom-container {
    position: absolute;
    background-color: rgb(255, 255, 255);
    width: 100%;
    height: 40%;
    transform: translateY(35%);
}

.ai-content {
    left: 7%;
    right: 7%;
    height: 28%;
    background-color: white;
    position: absolute;
    z-index: 1;
    opacity: 75%;
    margin-top: 80%;
    border-radius: 20rpx;
    border-bottom: black;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.ai-image {
    width: 100%;
    transform: translateY(-1%);
}

.input {
    top: 7%;
    position: absolute;
    left: 7%;
    right: 7%;
    height: 28%;
    background-color: rgba(36, 119, 249, 1);
    position: absolute;
    z-index: 1;
    color: white;
    border-radius: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.chat-button {
    width:120rpx !important;
    height: 120rpx;
    background-color: rgba(36, 119, 249, 1);
    border-radius: 360rpx;
    z-index: 20;
    margin-top: 40%;
    align-items: center;
    display: flex;
}

.input-container {
    display: flex;
    align-items: center;
    position: absolute;
    background-color: #f1eded;
    flex-direction: row;
    left: 0;
    right: 0;
    bottom: 0;
    margin-bottom: -10rpx;
    padding-top: 30rpx;
    padding-bottom: 70rpx;
}

.voice-button {
    width: 90rpx !important;
    height: 90rpx;
    opacity: 0;
    background-image: url(../../images/v2_rr1xqf.png);
    margin-left: 20rpx;
    background-size: cover;
}

.user-input {
    height: 90rpx;
    width: 75%;
    margin-left: 20rpx;
    margin-right: 50rpx;
    background-color: #ffffff;
    border-radius: 8rpx;
}