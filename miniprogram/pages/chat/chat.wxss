/* pages/chat/chat.wxss */
page{
    height: 100%;
}
.container{
    height: 75%;
    position: relative;
    flex-direction: column;
}

.ai-container {
    background-color: #ffa200;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.user-container{
    display: block;
    padding: 30rpx;
  }

.ai-image {
    width: 100%;
    height: 100%;
}

  .input-container {
      display: flex;
      border: 5rpx solid #face82;
      margin-bottom: 50rpx;
      border-radius: 10rpx;
  }

  .input {
    height: 68rpx;
    padding: 0 5rpx;
    width: 100%;
  }

  .button-container {
    width: 60%;
    margin:0 auto;
  }