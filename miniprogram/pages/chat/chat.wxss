/* pages/chat/chat.wxss */
page {
    height: 100%;
}

.above-container {
    height: 50%;
    position: relative;
    z-index: 0;
}

.bottom-container {
    position: absolute;
    background-color: rgb(255, 255, 255);
    width: 100%;
    height: 40%;
    transform: translateY(35%);
}

.ai-content {
    left: 7%;
    right: 7%;
    height: 28%;
    background-color: white;
    position: absolute;
    z-index: 1;
    opacity: 75%;
    margin-top: 80%;
    border-radius: 20rpx;
    border-bottom: black;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.ai-image {
    width: 100%;
    transform: translateY(-1%);
}

.input {
    top: 7%;
    position: absolute;
    left: 7%;
    right: 7%;
    height: 28%;
    background-color: rgba(36, 119, 249, 1);
    position: absolute;
    z-index: 1;
    color: white;
    border-radius: 20rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.chat-button {
    width:120rpx !important;
    height: 120rpx;
    background-color: rgba(36, 119, 249, 1);
    border-radius: 360rpx;
    z-index: 20;
    margin-top: 40%;
    align-items: center;
    display: flex;
}

